<header class="mb-4">
  <div class="identity-bar">
    <div class="container">
      <a class="su-brand-bar__logo" href="https://www.stanford.edu">Stanford University</a>
    </div>
  </div>
  <nav class="navbar navbar-expand-md bg-dark cardinal">
    <div class="container">
      <a class="mb-0 navbar-brand navbar-logo" href="https://library.stanford.edu">Stanford University Libraries</a>
      <div class="d-md-block d-none">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <button
              class="nav-link logout-dropdown dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false">
              Logged in: <%= current_user.sunetid %>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Logout', '/Shibboleth.sso/Logout', class: 'dropdown-item' %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="masthead bg-dark cardinal">
    <div class="container">
      <div class="d-flex flex-wrap align-items-end pt-3 pb-1 pb-md-3 gap-2">
        <div class="d-flex align-items-end gap-2 flex-grow-1">
          <span class="rosette-logo me-1 align-self-start flex-shrink-0" aria-hidden></span>
          <div class="me-1 flex-grow-1">
            <h1 class="my-0"><%= title %></h1>
            <span class="h4 d-block my-1"><%= subtitle %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
