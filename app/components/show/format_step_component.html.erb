<%= render Shared::StepComponent.new(step:,
                                     title: t('steps.format.title'),
                                     done: step_complete?) do |component| %>
  <% component.with_help_content do %>
    <%= t('steps.format.help_html') %>
  <% end %>

  <% component.with_body_content do %>
    <%= render Shared::FormatStepBodyComponent.new %>
  <% end %>
<% end %>
