<%= render Shared::StepComponent.new(step: SubmissionPresenter::PERMISSION_FILES_STEP,
                                     title: t('steps.permission_files.title'),
                                     submission:) do |component| %>
  <% component.with_help_content do %>
    <%= t('steps.permission_files.help_html') %>
  <% end %>

  <% component.with_body_content do %>
    <% if permission_files.any? %>
      <%= render Shared::PermissionFilesStepBodyTableComponent.new(submission:) %>
    <% else %>
      <p>My dissertation does not include permission files.</p>
    <% end %>
  <% end %>
<% end %>
