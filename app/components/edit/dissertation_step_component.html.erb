<%= render Edit::StepComponent.new(step: SubmissionPresenter::DISSERTATION_STEP,
                                   title: t('steps.dissertation.title'),
                                   submission:,
                                   done_disabled: done_disabled?) do |component| %>
  <% component.with_help_content do %>
    <%= t('steps.dissertation.help_html') %>
  <% end %>

  <% component.with_body_content do %>
    <%= render Shared::DissertationStepBodyHelpComponent.new %>
    <% if dissertation_file.attached? %>
      <%= render Shared::DissertationStepBodyTableComponent.new(submission:, with_remove: true) %>
    <% else %>
      <%= helpers.with_submission_form(submission) do |form| %>
        <%= form.label :dissertation_file, class: 'form-label' do %>
          Upload PDF (maximum size 1GB) <%= helpers.required_field %>
        <% end %>
        <%= form.file_field :dissertation_file, accept: 'application/pdf', data: dissertation_file_data, class: 'form-control', style: 'width: 350px;' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
